.row.dev
  = form_for @book, :html => {:class => "col s12"} do |f|
    - if @book.errors.any?
      #error_explanation
        %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
        %ul
          - @book.errors.full_messages.each do |msg|
            %li= msg

    .row
      .input-field.col.s6
        = f.label :title
        = f.text_field :title
    .row
      .input-field.col.s6
        = f.label :version
        = f.text_field :version
    .row
      .input-field.col.s6
        = f.label :released_on
        = f.text_field :released_on
    .actions
      = f.submit 'Save', {:class => 'btn'}
      or
      = link_to 'Cancel', :back
