%h1 Listing versions

%table
  %thead
    %tr
      %th Book
      %th Version
      %th Released on
      %th
      %th
      %th

  %tbody
    - @versions.each do |version|
      %tr
        %td= version.book
        %td= version.version
        %td= version.released_on
        %td= link_to 'Show', version
        %td= link_to 'Edit', edit_version_path(version)
        %td= link_to 'Destroy', version, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Version', new_book_version_path(@book)
